SELECT  PP.id_presupuestoProducto, PP.presupuesto, PP.producto, PP.cantidad, PP.precio  FROM presupuesto P, presupuestoProducto PP WHERE PP.presupuesto = P.id_presupuesto AND PP.presupuesto =1


CREATE OR REPLACE FUNCTION func_e() RETURNS TRIGGER AS $funcemp$
DECLARE 
presupuesto INTEGER;
BEGIN
	IF NEW.presupuesto <> '' THEN
		UPDATE arreglo SET concicion = 'EVALUACION DE PRESUPUESTO' WHERE NEW.arreglo = id_arreglo;
	END IF;
RETURN NEW;
END; $funcemp$ LANGUAGE plpgsql;

CREATE TRIGGER trigger_e AFTER UPDATE ON presupuesto
FOR EACH ROW EXECUTE PROCEDURE func_e();


CREATE TRIGGER trigger_p BEFORE UPDATE ON presupuesto
FOR EACH ROW EXECUTE PROCEDURE func_p();

